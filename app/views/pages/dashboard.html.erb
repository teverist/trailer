<h2>Dashboard</h2>

<% if user_signed_in? %>
  <div class="row">
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <% if current_user.profile %>
            <%= link_to "Edit Profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
            <%= link_to "View Profile", user_path(current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% else %>
           <%= link_to "Create Profile", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% end %> 
        </div>
      </div>
    </div>
<% end %>

  <div class="col-lg-3">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-body">
          <h3 class="card-title"><%= link_to post.title, post %></h3>
          <p class="carf-text"><%= post.created_at.strftime("%A, %b, %d") %> </p>
        </div>
      </div>
    <% end %>
  </div>
</div>